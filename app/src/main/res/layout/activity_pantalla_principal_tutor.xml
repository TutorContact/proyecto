<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="22dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="22dp"
    tools:context="com.example.nathali.tutorcontactapp.PantallaPrincipalTutor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bienvenid@ Tutor a:"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50px" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="127dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logotutorcontact"
            android:adjustViewBounds="false"
            android:paddingTop="5dp" />

        <Button
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Horarios Disponibles"
            android:id="@+id/Horadisponibles"
            android:layout_gravity="center_horizontal"
            android:onClick="horasDisponibles" />

        <Button
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Reuniones"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:focusable="false" />

    </LinearLayout>
</RelativeLayout>
